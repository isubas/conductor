<div class="shadow p-3 mb-5 bg-white rounded">
  <%= link_to_edit 'Edit', edit_permission_path(@permission) %>
  <%= link_to_back 'Back', permissions_path %>
</div>

<div class="card">
  <h5 class="card-header"><%= @permission.name %></h5>
  <div class="card-body">
    <p><strong>Identifier:</strong> <%= @permission.identifier %></p>
    <p><strong>Description:</strong> <%= @permission.description %></p>
    <hr>
    <h2>Actions</h2>

    <ul class="list-group list-group-flush">
      <% @permission.actions.each do |action| %>
        <li class="list-group-item">
          <%= action.name %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

