<div class="shadow p-3 mb-5 bg-white rounded">
  <%= link_to_new 'New Role', new_role_path %>
</div>

<h1 class="text-center">Roles</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td><%= link_to_actions(role) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
