<div class="shadow p-3 mb-5 bg-white rounded">
  <%= link_to_edit 'Edit', edit_role_path(@role) %>
  <%= link_to_back 'Back', roles_path %>
</div>

<h3 class="text-center"><%= @role.name %></h3>
<hr>

<div class="card mb-4">
  <h5 class="card-header">Permissions</h5>
  <div class="card-body">
    <ul class="list-group list-group-flush">
      <% @role.permissions.each do |permission| %>
        <li class="list-group-item">
          <%= permission.name %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="card">
  <h5 class="card-header">Users</h5>
  <div class="card-body">
    <ul class="list-group list-group-flush">
      <% [].each do |user| %>
        <li class="list-group-item">
          <%= user.email %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
